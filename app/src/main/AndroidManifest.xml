<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.keelim.hardware">

    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.READ_PRIVILEGED_PHONE_STATE" />
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.FLASHLIGHT" />

    <uses-feature android:name="android.hardware.camera" />

    <uses-permission
        android:name="android.permission.READ_PHONE_STATE"
        tools:node="remove" />

    <application
        android:allowBackup="true"
        android:fullBackupContent="@xml/backup_descriptor"
        android:icon="@drawable/customizationicon"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity android:name="com.keelim.hardware.view.MainActivity"></activity>
        <activity
            android:name=".view.fragments.FragmentMainActivity2"
            android:label="@string/title_activity_hello"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".view.TestActivity" />
        <activity
            android:name=".after.SplashActivity"
            android:label="@string/title_activity_splash">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".view.MainActivity"
            android:label="@string/app_name" />
        <activity
            android:name=".view.AccelarometerActivity"
            android:label="@string/title_activity_accelarometer" />
        <activity
            android:name=".view.MagneticSensorActivity"
            android:label="@string/title_activity_magneticsensor">
            <intent-filter>
                <action android:name="android.intent.action.MAGNETICSENSOR" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".view.GyroscopeActivity"
            android:label="@string/title_activity_gyroscope" />
        <activity
            android:name=".view.BatteryindicatorActivity"
            android:label="@string/title_activity_batteryindicator" />
        <activity
            android:name=".view.GpslocActivity"
            android:label="@string/title_activity_gpsloc" />
        <activity
            android:name=".view.WifiActivity"
            android:label="@string/title_activity_wifiaddress" />
        <activity
            android:name=".view.BluetoothAddActivity"
            android:label="@string/title_activity_blueadd" />
        <activity
            android:name=".view.HeadphoneActivity"
            android:label="@string/title_activity_headphone" />
        <activity
            android:name=".view.VibrationActivity"
            android:label="@string/title_activity_vibration" />
        <activity
            android:name=".view.TeleActivity"
            android:label="@string/title_activity_tele" />
        <activity
            android:name=".view.SystemInfoActivity"
            android:label="@string/title_activity_systeminfo" />
        <activity
            android:name=".view.TouchSensorActivity"
            android:label="@string/title_activity_touch_sensor" />
        <activity
            android:name=".view.DisplayActivity"
            android:label="@string/title_activity_button" />
        <activity
            android:name=".view.ProximitySensorActivity"
            android:label="@string/title_activity_proximity_sensor" />
        <activity
            android:name=".view.LightSensorActivity"
            android:label="@string/title_activity_lightsensor" />
        <activity
            android:name=".view.SoundButtonActivity"
            android:label="@string/title_activity_buttontesting" />
        <activity
            android:name=".view.MicActivity"
            android:label="@string/title_activity_mictesting" />
        <activity
            android:name=".view.PressureActivity"
            android:label="@string/title_activity_pressure" />
        <activity
            android:name=".view.FlashActivity"
            android:label="@string/title_activity_flash" />
        <activity
            android:name=".view.GravitySensorActivity"
            android:label="@string/title_activity_gravitysensor" />
    </application>

</manifest>