<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer"
    android:layout_width="300dp"
    android:layout_height="match_parent"
    android:layout_gravity="start"
    android:background="@android:color/holo_blue_dark"
    android:gravity="center_horizontal">

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navigationView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/nav_bottomline"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="5dp"
        app:headerLayout="@layout/main_nav_header"
        app:menu="@menu/main_nav_menu" />

    <LinearLayout
        android:id="@+id/nav_bottomline"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_alignParentBottom="true"
        android:background="#FFFFFF">

        <ImageButton
            android:id="@+id/developer_button"
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:contentDescription="@string/developer_description"
            android:src="@drawable/ic_person_outline_black_24dp" />

        <ImageButton
            android:id="@+id/login_test_button"
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:contentDescription="@string/developer_description"
            android:src="@drawable/ic_person_pin_black_24dp" />

    </LinearLayout>


</RelativeLayout>