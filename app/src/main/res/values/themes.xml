<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Hard" parent="Theme.MaterialComponents.Light">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/main1</item>
        <item name="colorPrimaryVariant">@color/main2</item>
        <item name="colorOnPrimary">@color/main3</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/sub1</item>
        <item name="colorSecondaryVariant">@color/sub2</item>
        <item name="colorOnSecondary">@color/sub3</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.Hard.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="background">@color/main1</item>
    </style>

    <style name="Theme.Hard.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Hard.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>